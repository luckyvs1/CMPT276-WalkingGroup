<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.MessagesActivity"
    android:background="#eeeeee"
    >

    <RelativeLayout
        android:id="@+id/messagesActivity_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/messagesActivity_headerText"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginStart="6dp"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/messagesActivity_chatList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/messagesActivity_header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none"
        >


    </ListView>

    <RelativeLayout
        android:id="@+id/messagesActivity_newMessageBtn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/background_round_button_theme_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        android:elevation="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/messagesActivity_newMessageBtnText"
            android:textSize="28sp"
            android:textColor="#d0ffffff"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>