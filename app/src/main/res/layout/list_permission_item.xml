<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rectangle_rounded_white"
        android:layout_margin="8dp"
        android:elevation="5dp"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/listPermission_tagContainer"

                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"

                android:text="Request to join group"
                />


            <LinearLayout
                android:id="@+id/listPermission_tagContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/background_tag_dark_red"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"

                    android:text="DENIED"
                    />

            </LinearLayout>





        </android.support.constraint.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="15sp"
            android:textColor="#000"

            android:text="Bobby (email: bobby@bob.com) requests to join Jim's walking group."
            />

        <LinearLayout
            android:id="@+id/listPermission_authorizerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"

                android:background="#fff"
                android:elevation="2dp"
                android:padding="8dp"
                android:layout_margin="3dp"

                android:text="Denied by Bob Bob"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/listPermission_actionButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#fff"
                android:text="APPROVE"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#fff"
                android:text="DENY"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>