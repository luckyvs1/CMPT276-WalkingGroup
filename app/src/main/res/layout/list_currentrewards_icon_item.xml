<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="1">

    <ImageView
        android:id="@+id/imageViewCurrentRewardItem_Col1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="33"
        app:srcCompat="@drawable/avatar11" />

    <ImageView
        android:id="@+id/imageViewCurrentRewardItem_Col2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="33"
        app:srcCompat="@drawable/avatar12" />

    <ImageView
        android:id="@+id/imageViewCurrentRewardItem_Col3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="33"
        app:srcCompat="@drawable/avatar13" />
</GridLayout>