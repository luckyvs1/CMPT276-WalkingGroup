<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_group_list"
        android:elevation="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/groupListItem_groupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/groupListItem_leaderTag"
            android:textSize="20sp"
            android:textColor="#000"
            />

        <RelativeLayout
            android:id="@+id/groupListItem_leaderTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LEADER"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/groupListItem_groupDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/groupListItem_groupName"
            android:layout_marginTop="20dp"
            android:maxLines="3"
            android:textSize="12sp"
            />

    </RelativeLayout>
</RelativeLayout>
