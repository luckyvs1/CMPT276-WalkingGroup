<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/trackUser_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/listMembers_tagContainer"
        android:textColor="#000"
        android:textSize="17sp"
        android:text="@string/sampleText"
        />

    <LinearLayout
        android:id="@+id/listMembers_tagContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/trackUser_name"
        android:orientation="horizontal"
        android:gravity="end"
        >

        <RelativeLayout
            android:id="@+id/listUsers_monitorTag"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/background_tag_teal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listUsers_monitorTag"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/listUsers_youTag"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/background_tag_dark_red"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listUsers_youTag"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/listMembers_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/trackUser_name"
        android:layout_marginTop="2dp"
        android:textSize="15sp"
        android:text="@string/sampleText"
        />

</RelativeLayout>
