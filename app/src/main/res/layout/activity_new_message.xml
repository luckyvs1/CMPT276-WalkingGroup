<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.NewMessageActivity"
    android:orientation="vertical"
    android:background="#eeeeee"
    >

    <RelativeLayout
        android:id="@+id/newMessage_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newMessage_headerText"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginStart="6dp"
            />

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/newMessage_toUserInputContainer"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@id/newMessage_header"
        android:paddingStart="10dp"
        android:background="#fff"
        android:elevation="2dp"
        >

    <TextView
        android:id="@+id/newMessage_toUserInputPrompt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/newMessage_toUserInputPrompt"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#000"
        />

    <Spinner
        android:id="@+id/newMessage_toUserDropdown"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/newMessage_toUserInputPrompt"
        app:layout_constraintEnd_toStartOf="@id/newMessage_newMessageBtn"
        app:layout_constraintWidth_default="spread"
        android:spinnerMode="dropdown"
        >

    </Spinner>

    <RelativeLayout
        android:id="@+id/newMessage_newMessageBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/background_header_button"
        >

        <ImageView
            android:id="@+id/newMessage_newMessageIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_message_black"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/newMessage_newMessageText"
            />

        <TextView
            android:id="@+id/newMessage_newMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="1dp"
            android:text="@string/newMessage_newMessageText"
            android:textColor="#000"
            android:textSize="20sp"
            />

    </RelativeLayout>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/newMessage_groupListContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/newMessage_groupListTitle"
            android:textSize="15sp"
            android:padding="10dp"
            />

        <ListView
            android:id="@+id/newMessage_groupList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
        </ListView>

    </LinearLayout>
</LinearLayout>